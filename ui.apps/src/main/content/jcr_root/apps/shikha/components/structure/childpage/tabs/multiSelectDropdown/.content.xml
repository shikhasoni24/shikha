<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="select multiple options"
    sling:resourceType="granite/ui/components/coral/foundation/container">
    <items jcr:primaryType="nt:unstructured">
        <column
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <hotelArea
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Multi Select Dropdown"
                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                    style="min-height: 450px;">
                    <items jcr:primaryType="nt:unstructured">
                        <dropdown
                            jcr:primaryType="nt:unstructured"
                            jcr:title="select multiple options"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            multiple="{Boolean}true"
                            name="./dropdowncomp">
                            <datasource
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/bin/shikha/hotelarea"/>
                        </dropdown>
                    </items>
                </hotelArea>
                <radiobutton
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                    name="./accessLevel"
                    value="accessLevel">
                    <items jcr:primaryType="nt:unstructured">
                        <public
                            granite:class="checkbox-align"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/radio"
                            name="./selected"
                            renderReadOnly="{Boolean}true"
                            text="public"
                            value="public"/>
                        <hide_x0020_from_x0020_public
                            granite:class="checkbox-align"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/radio"
                            name="./selected"
                            renderReadOnly="{Boolean}true"
                            text="hide from public"
                            value="hide from public"/>
                    </items>
                </radiobutton>
                <OverridePermission
                    jcr:primaryType="nt:unstructured"
                    jcr:title="override permission"
                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                    cls="overridePermission"/>
            </items>
        </column>
    </items>
</jcr:root>
